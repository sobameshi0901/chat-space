.sideBar
  .userProfile
    %h1.userProfile__name 
      = current_user.name
    %ul.userProfile__icons
      %li<
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li<
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .userGroups
    -if current_user.groups.present?
      - current_user.groups.each do |group|
        .userGroup
          =link_to group_messages_path(group.id) do
            %p.userGroup__name= group.name
          %p.userGroup__text= group.show_last_message
